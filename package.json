{
	"name": "clarion",
	"description": "Clarion Language Support",
	"version": "1.0.18",
	"author": "Fushnisoft",
	"repository": {
		"type": "git",
		"url": "https://github.com/fushnisoft/SublimeClarion"
	},
	"publisher": "Fushnisoft",
	"icon": "images/sv57x57.png",
	"galleryBanner": {
		"color": "#474747",
		"theme": "dark"
	},
	"license": "SEE LICENSE IN LICENSE.txt",
	"bugs": {
		"url": "https://github.com/fushnisoft/SublimeClarion/issues"
	},
	"engines": {
		"vscode": "^0.10.1"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"contributes": {
		
		"languages": [
			{
				"id": "clarion",
				"aliases": [
					"Clarion",
					"clarion"
				],
				"extensions": [
					".clw",
					".equ",
					".inc",
					".int",
					".txa",
					".txd",
					".tpl",
					".tpw"
				],
				"configuration": "./clarion.configuration.json"
			}
		],
		"engines": {
			"vscode": "^1.23.0"
		},
		"grammars": [
			{
				"language": "clarion",
				"scopeName": "source.clarion",
				"path": "./syntaxes/Clarion.tmLanguage.json"
			}
		],
		"snippets": [
		   {	
			   "language": "clarion",
			   "path": "./snippets/clarion.json"
		   }
		]
	}
}
